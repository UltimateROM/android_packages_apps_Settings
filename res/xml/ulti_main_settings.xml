<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/ulti_extras_title" >

    <!-- Ulti Extra Apps -->
    <PreferenceCategory
        android:key="ulti_ex_apps"
        android:title="@string/ulti_ex_apps_title">

        <!-- Density Changer -->
        <PreferenceScreen
            android:key="density_changer"
            android:title="@string/lcd_density_title"
            android:fragment="com.android.settings.ulti.Density"
            android:icon="@drawable/ic_dt_density" />

    </PreferenceCategory>


    <!-- Ulti System Settings -->
    <PreferenceCategory
        android:key="ulti_ex_settings"
        android:title="@string/ulti_ex_settings_title">

        <!-- Home -->
        <PreferenceScreen-tile
                android:id="@+id/home_settings"
                android:title="@string/home_settings"
                android:fragment="com.android.settings.HomeSettings"
                android:icon="@drawable/ic_settings_home"
                />
    </PreferenceCategory>

</PreferenceScreen>
