<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/ulti_extras_title" >

    <!-- Ulti Extra Apps -->
    <PreferenceCategory
        android:key="ulti_ex_apps"
        android:title="@string/ulti_ex_apps_title">

        <!-- Equalizer -->
        <Preference
            android:id="@+id/equalizer_settings"
            android:title="@string/equalizer_settings_title"
            android:layout="@layout/preference_benzoextra_viper4android" >
            <intent
                android:action="android.intent.action.MAIN"
                android:targetClass="com.vipercn.viper4android_v2.activity.ViPER4Android"
                android:targetPackage="com.vipercn.viper4android_v2" />
        </Preference>

        <!-- Density Changer -->
<!--       <PreferenceScreen
            android:key="density_changer"
            android:title="@string/lcd_density_title"
            android:fragment="com.android.settings.ulti.Density"
            android:icon="@drawable/ic_dt_density" />
-->

    <!-- Ulti System Settings -->
    <PreferenceCategory
        android:key="ulti_ex_settings"
        android:title="@string/ulti_ex_settings_title">

        <!-- Buttons -->
<!--
        <PreferenceScreen
            android:id="@+id/button_settings"
            android:fragment="com.android.settings.ButtonSettings"
            android:title="@string/button_settings_title"
            android:layout="@layout/preference_benzoextra_buttons"
            />
-->
        <!-- Home -->
       <PreferenceScreen
            android:id="@+id/home_settings"
            android:title="@string/home_settings"
            android:fragment="com.android.settings.HomeSettings"
            android:layout="@layout/preference_benzoextra_home"
            />

        <!-- Navbar -->
        <PreferenceScreen
            android:id="@+id/navbar_settings"
            android:fragment="com.android.settings.benzo.NavbarSettings"
            android:title="@string/navbar_settings_title"
            android:layout="@layout/preference_benzoextra_navbar"
            />

        <!-- Statusbar -->
        <PreferenceScreen
            android:id="@+id/statusbar_settings"
            android:fragment="com.android.settings.benzo.StatusBarSettings"
            android:title="@string/statusbar_settings_title"
            android:layout="@layout/preference_benzoextra_statusbar"
            />

        <PreferenceScreen
            android:key="systemuituner"
            android:title="@string/benzo_extras_systemuituner"
            android:layout="@layout/preference_benzoextra_systemui_tuner" >
            <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.TunerActivity" />
       </PreferenceScreen>

        <!-- Weather Settings -->
       <Preference
           android:id="@+id/weather_settings"
           android:title="@string/weather_settings_title"
           android:layout="@layout/preference_benzoextra_weather" >
           <intent
               android:action="android.intent.action.MAIN"
               android:targetClass="com.cyanogenmod.lockclock.preference.Preferences"
               android:targetPackage="com.cyanogenmod.lockclock" >
               <extra android:name=":android:show_fragment"
                   android:value="com.cyanogenmod.lockclock.preference.WeatherPreferences" />
           </intent>
       </Preference>

        <!-- More Settings -->
         <PreferenceScreen
            android:key="moresetiings"
            android:fragment="com.android.settings.ulti.fragments.MoreSettings"
            android:layout="@layout/preference_ultiextra_moresettings"
            android:title="@string/more_settings_title" 
            />

    </PreferenceCategory>

</PreferenceScreen>
